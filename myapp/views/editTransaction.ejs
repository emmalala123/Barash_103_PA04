<form method="post" action="/transaction/updateTransactionItem">
    <input type="hidden" name="itemId" value="<%= item._id %>">
    <h1>Update this transaction</h1><br/>
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" value="<%= item.description %>" class="t-put"><br/>
    <label for="amount">Amount:</label>
    <input type="number" id="amount" name="amount" value="<%= item.amount %>" class="t-put"><br/>
    <label for="category">Category:</label>
    <input type="text" id="category" name="category" value="<%= item.category %>" class="t-put"><br/>
    <input type="submit" value="store">
  </form>