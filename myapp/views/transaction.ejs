<h1> Transactions for <%= user.username %> </h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
           <th> <p><a  class="btn btn-lg btn-primary"
                    href="/transaction">group by category</a></p></th>
           <th> <p><a  class="btn btn-lg btn-primary"
                    href="/transaction">sort by category</a></p></th>
           <th> <p><a  class="btn btn-lg btn-primary"
                    href="/transaction">sort by amount</a></p></th>
           <th> <p><a  class="btn btn-lg btn-primary"
                    href="/transaction">sort by description</a></p></th>
           <th> <p><a  class="btn btn-lg btn-primary"
                    href="/transaction">sort by date</a></p></th>
      </tr>
      <tr>
            <th>description</th>
            <th>amount</th>
            <th>category</th>
            <th>date</th>
            <th>edit</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody>
        <!-- <% if (show=='category'){%>
            <a class="btn btn-lg btn-primary"
                href="?show=category"></a>
        <% }else {%>
            <a class="btn btn-lg btn-primary"
                href="?show=date"></a>
            <%}%> -->
        <% items.map(item => {%>
            <tr>
               <td><%= item.description %> </td>
               <td><%= item.amount %></td>
               <td><%= item.category %></td>
               <td><%= item.createdAt %></td>
               <td><a href="/transaction/edit/<%=item._id %>">
               <i class="bi bi-pencil-square"></i></a></td>
               <td><a href="/transaction/remove/<%=item._id %>">
                <i class="bi bi-trash"></i></a></td>
            </tr>
            <% }) %>

    </tbody>
</table>

        <form method="post" action="transaction">
            <h1>Create a new transaction</h1><br/>
            <input type="text" name="description" placeholder="description" class="t-put">
            <input type="number" name="amount" placeholder="amount" class="t-put">
            <input title="" type="text" name="category" placeholder="category" class="t-put">
            <input type="submit" value="store">
        </form>
      </div>
    </div>
</div>